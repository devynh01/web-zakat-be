generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @db.VarChar(255)
  password String @db.VarChar(255)
  role     Role
}

model Pengurus {
  id         Int          @id @default(autoincrement())
  pengurusId String       @default(cuid())
  name       String       @unique @db.VarChar(255)
  DoB        DateTime?
  address    String?
  createdAt  DateTime     @default(now())
  pembayaran Pembayaran[]
  penyaluran Penyaluran[]
  Infaq      Infaq[]
}

model Pembayaran {
  id           Int      @id @default(autoincrement())
  muzakkiName  String   @db.VarChar(255)
  paymentDate  DateTime
  amountRice   Int
  amountMoney  Int
  notes        String?
  createdAt    DateTime @default(now())
  pengurusName String   @db.VarChar(255)
  pengurus     Pengurus @relation(fields: [pengurusName], references: [name])
}

model Penyaluran {
  id               Int      @id @default(autoincrement())
  mustahikName     String   @db.VarChar(255)
  distributionDate DateTime
  amountRice       Int
  amountMoney      Int
  notes            String?
  createdAt        DateTime @default(now())
  pengurusName     String   @db.VarChar(255)
  pengurus         Pengurus @relation(fields: [pengurusName], references: [name])
}

model Infaq {
  id           Int      @id @default(autoincrement())
  name         String   @db.VarChar(255)
  date         DateTime
  amountRice   Int
  amountMoney  Int
  notes        String?
  createdAt    DateTime @default(now())
  pengurusName String   @db.VarChar(255)
  pengurus     Pengurus @relation(fields: [pengurusName], references: [name])
}

model Masyarakat {
  id        Int            @id @default(autoincrement())
  name      String         @db.VarChar(255)
  DoB       DateTime?
  PoB       String?
  job       String?
  type      typeMasyarakat
  phone     String?
  address   String?
  createdAt DateTime       @default(now())
}

enum Role {
  ADMIN
  DKM
}

enum typeMasyarakat {
  MUZAKKI
  MUSTAHIK
}

// create a table called report with contents related to the infaq, payment, distribution and management tables. I want this report table to have data regarding the amount of money and rice infaq, the amount of money and rice payments, the amount of money and rice distribution, and can also be selected based on year
model Laporan {
  id          Int      @id @default(autoincrement())
  year        String
  amountRice  Int
  amountMoney Int
  createdAt   DateTime @default(now())
}
